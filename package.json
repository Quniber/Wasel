{
  "name": "taxi-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/admin-api",
    "apps/admin-panel",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "admin-api": "npm run dev --workspace=admin-api",
    "rider-api": "npm run dev --workspace=rider-api",
    "driver-api": "npm run dev --workspace=driver-api",
    "db:generate": "npm run generate --workspace=database",
    "db:push": "npm run push --workspace=database",
    "db:studio": "npm run studio --workspace=database"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "@babel/runtime": "^7.28.4"
  }
}
